<h1 class="text-center">New Category</h1>

<div class="row py-2">
 <div class= "col-lg-4 mx-auto">
<%= form_with url: admin_categories_path do |form| %>

  <% if @category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mt-3">
    <%= form.label :category_name do %>
    Category name<span class="required" style="color:red;">*</span>
    <% end %><br />
    <%= form.text_field :category_name, autofocus: true, autocomplete: "name", :required =>true, class:"form-control py-2" %>
  </div>

  <div class="field mt-3">
    <%= form.label :description do %>
    Description<span class="required" style="color:red;">*</span>
    <% end %><br />
    <%= form.text_field :description , autofocus: true, autocomplete: "name", :required =>true, class:"form-control py-2"%>
  </div>

  <div class="actions mt-4 mb-5">
    <%= form.submit  "Create", data: {turbo:false}, class:"form-control py-2 btn btn-dark fw-bold shadow" %>
  </div>
<% end %>


<div>
  <%= link_to "Back to categories", admin_categories_path %>
</div>
