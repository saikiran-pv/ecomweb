
<h2 class=text-center>Edit store details</h2>
<div class="row py-2">
 <div class= "col-lg-4 mx-auto">
  <%= form_with url: admin_store_path(@store.id), method: :patch do |form| %>
    <% if @store.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

        <ul>
          <% @store.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="field mt-3">
    <%= form.label :store_name, style: "display: block" %>
    <%= form.text_field :store_name, value: @store.store_name, class:"form-control py-2"  %>
  </div>

  <div class="field mt-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, value: @store.description, class:"form-control py-2"  %>
  </div>

  <div class="field mt-3">
    <%= form.label :logo %>
    <%= form.file_field :logo,  class:"form-control py-2"  %>
  </div>

  <div>
    <%= form.submit "Update Changes", data: {turbo:false}, class:"form-control py-2 btn btn-dark fw-bold shadow"%>
  </div>
<% end %>