<div class="result">
<div><h1>Users</h1></div>
<div><%= link_to "Create Store admins/staffs",new_admin_user_path, class:"btn btn-dark"%></div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Address</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.role %></td>
        <td style="display:flex; flex-direction:row;">
          <%= link_to "Edit User",edit_admin_user_path(user.id), class: "btn btn-primary" %>
          <%= link_to "Delete",admin_user_path(user.id), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

